             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFMVVM.IHM.Views"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="400">


    <TextBlock FontSize="25" Foreground="Red" HorizontalAlignment="Left" VerticalAlignment="Center"
               Text="{Binding Info, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"/>

    <TextBlock FontSize="25" Foreground="Red" HorizontalAlignment="Center" VerticalAlignment="Center"
               Text="Admin View"/>
</Grid>
